.row
  .large-4.columns
    = form_for @project, :remote => true do |f|
      = f.label :title
      = f.text_field :title, :autofocus => true
      = f.label :job_num, 'Job Number'
      = f.text_field :job_num
      = f.label :deadline
      = f.email_field :deadline
      = f.label :description
      = f.text_area :description, :size => "24x4"
      = f.submit 'Create Project Record', :class => 'button success radius'
      = link_to('Cancel', '#', :id=>'cancel_new_project', :class => 'button radius alert')
  .large-8.columns
