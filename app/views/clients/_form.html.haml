.row
  .large-4.columns
    = form_for @client, :remote => true do |f|
      = f.label :name
      = f.text_field :name, :autofocus => true
      = f.label :address
      = f.text_field :address
      = f.label :primary_name, 'Primary Contact'
      = f.text_field :primary_name
      = f.label :primary_email, 'E-mail'
      = f.email_field :primary_email
      = f.label :primary_phone, 'Phone'
      = f.telephone_field :primary_phone
      = f.label :second_name, 'Secondary Contact'
      = f.text_field :second_name
      = f.label :second_email, 'E-mail'
      = f.email_field :second_email
      = f.label :second_phone, 'Phone'
      = f.telephone_field :second_phone
      = f.label :note, 'Notes'
      = f.text_area :note, :size => "24x4"
      = f.submit 'Create Client Record', :class => 'button success radius'
      = link_to('Cancel', '#', :id=>'cancel_new_client', :class => 'button radius alert')
  .large-8.columns